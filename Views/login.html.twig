<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, user-scalable=no">
  <title>Login</title>
  {% block head %}
  <link rel="stylesheet" href="{{asset('bundles/style.css')}}">
  {%endblock%}
  
  <!-- voir à DL les fonts et les inclure en local ? (perf' - non dépendance à des ressources externes)-->
   <link href="https://fonts.googleapis.com/css?family=Lato:400|Lora:400i|Metamorphous" rel="stylesheet"> 
  
</head>
<body>
  <header>
    <button class="c-hamburger c-hamburger--rot">
      <span>toggle menu</span>
    </button>
    <nav>
        <a href="/login">Se connecter</a>
        <a href="/" ><h1> Magic Tournament </h1> </a>
        <a href="/register"> S'inscrire</a>
        
    </nav>
  </header>
  <section id="illus">
    <img src="{{asset('bundles/bkgd.jpg')}}" alt="Illustration de l'univers Magic"/> <!-- src : http://www.dudaite.com/i/2017/01/magic-the-gathering-dragon-wallpaper-picture.jpg !-->
  </section>
  <section id="main">
    <h2> Connexion </h2>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="form">
    <form action="{{ path('login') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <span><label for="password">Password:</label>
        <input type="password" id="password" name="_password" /></span>

        <input type="hidden" name="_target_path" value="user_registration" />
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <span><input type="submit" class='c3' value="Se connecter"></input></span>
    </form>
    </div>
  </section>
  
  <script type="text/javascript"> <!-- Pour faire fonctionner le burger-->
    (function() {

      "use strict";

      var toggles = document.querySelectorAll(".c-hamburger");

      for (var i = toggles.length - 1; i >= 0; i--) {
        var toggle = toggles[i];
        toggleHandler(toggle);
      };

      function toggleHandler(toggle) {
        toggle.addEventListener( "click", function(e) {
          e.preventDefault();
          (this.classList.contains("is-active") === true) ? this.classList.remove("is-active") : this.classList.add("is-active");
        });
      }

    })();
  </script>
  
</body>
</html>
